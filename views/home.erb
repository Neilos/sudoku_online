<div class="container contentContainer">
  <div class="col-md-6 col-md-offset-3">

    <h1 class="heading text-center">Sudoku</h1>
    <hr>
    <h2 class="text-center heading">Difficulty Level: <%= difficulty_level(session[:set_sudoku]) %></h2>
    <div class="flashspace">
      <%= styled_flash %>
    </div>
    <form action="/" method="post">
      <div class="board">
        <table cellspacing="0">
          <tbody>
            <tr>
              <% @cells.each_with_index do |cell, i| %>
                <%= "</tr><tr>" if end_of_row?(i) %>
                <td class="cell">
                  <input type='text' <%= cell.value == @solved_cells[i].value ? "class='correct'" : "class='wrong'" %> name="cells[]" maxlength="1" onClick="this.select();" autocomplete="off" pattern="[1-9]" <%= "value=#{cell.to_s}"%> "" <%= "readonly" if cell.value == @starting_cells[i].value && cell.value == @solved_cells[i].value %> >
                </td>
              <% end %>
            </tr>
          </tbody>
        </table>
        <div class="buttons">
          <button type="submit" class="btn btn-default">Check</button>
          <button type="button" class="btn btn-info"><a href="/new">New Easy Game</a></button>
          <button type="button" class="btn btn-danger"><a href="/hard">New Hard Game</a></button>
          <button type="button" class="btn btn-success"><a href="/solution">Solution</a></button>
        </div>
      </div>
    </form>
  </div>
</div>